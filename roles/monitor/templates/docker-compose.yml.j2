version: '3'
services:
  prometheus:
    image: prom/prometheus:v2.14.0
    user: root
    container_name: muta_prometheus
    ports:
      - '{{ prometheus_port }}:9090'
    restart: on-failure
    volumes:
      - ./prometheus.yml:/etc/prometheus/prometheus.yml
      - prometheus_data:/etc/prometheus/data
    command:
      - '--config.file=/etc/prometheus/prometheus.yml'
      - '--storage.tsdb.retention.time=365d'
      - '--storage.tsdb.retention.size=150GB'
      - '--storage.tsdb.path=/etc/prometheus/data/'
    networks:
      - muta-monitor-net
  grafana:
    image: grafana/grafana:7.0.0
    container_name: muta_grafana
    ports:
      - '{{ grafana_port }}:3000'
    restart: on-failure
    volumes:
      - grafana_data:/var/lib/grafana
      - ./grafana/provisioning:/etc/grafana/provisioning
      - ./dashboards:/var/lib/grafana/dashboards
    depends_on:
      - prometheus
    environment:
      GF_EXPLORE_ENABLED: "true"
      GF_RENDERING_SERVER_URL: http://renderer:8081/render
      GF_RENDERING_CALLBACK_URL: http://grafana:3000/
      GF_LOG_FILTERS: rendering:debug  
    networks:
      - muta-monitor-net
  
  # link https://github.com/grafana/grafana-image-renderer/blob/master/docs/remote_rendering_using_docker.md    
  renderer:
    image:  grafana/grafana-image-renderer:2.0.0
    container_name: muta-grafana-image-renderer
    ports:
      - 8081  
    networks:
      - muta-monitor-net
      
  loki:
    image: grafana/loki:1.5.0
    user: root
    container_name: muta_loki
    restart: on-failure
    ports:
      - "3100:3100"
    volumes:
      - ./loki-config.yaml:/etc/loki/loki-config.yaml
      - loki_data:/tmp/loki
    command: -config.file=/etc/loki/loki-config.yaml
    networks:
      - muta-monitor-net

  elasticsearch:
    image: docker.elastic.co/elasticsearch/elasticsearch:7.6.2
    networks:
      - muta-monitor-net
    ports:
      - "127.0.0.1:9200:9200"
      - "127.0.0.1:9300:9300"
    restart: on-failure
    environment:
      - cluster.name=jaeger-cluster
      - discovery.type=single-node
      - http.host=0.0.0.0
      - transport.host=127.0.0.1
      - ES_JAVA_OPTS=-Xms8192m -Xmx8192m
      - xpack.security.enabled=false
    volumes:
      - es_data:/usr/share/elasticsearch/data
      - /etc/localtime:/etc/localtime
  
  jaeger-collector:
    image: jaegertracing/jaeger-collector:1.18.1
    ports:
      - "14269:14269"
      - "14268:14268"
      - "14250:14250"
      - "9411:9411"
    networks:
      - muta-monitor-net
    restart: on-failure
    environment:
      - SPAN_STORAGE_TYPE=elasticsearch
    command: [
      "--es.server-urls=http://elasticsearch:9200",
      "--es.num-shards=1",
      "--es.num-replicas=0",
      "--log-level=error"
    ]
    depends_on:
      - elasticsearch

  jaeger-query:
    image: jaegertracing/jaeger-query:1.18.1
    environment:
      - SPAN_STORAGE_TYPE=elasticsearch
      - no_proxy=localhost
    ports:
      - "16686:16686"
      - "16687:16687"
    networks:
      - muta-monitor-net
    restart: on-failure
    command: [
      "--es.server-urls=http://elasticsearch:9200",
      "--span-storage.type=elasticsearch",
      "--log-level=debug"
    ]
    depends_on:
      - jaeger-collector  


networks:
  muta-monitor-net:
    driver: bridge

volumes:
  grafana_data: {}
  prometheus_data: {}
  loki_data: {}
  es_data: {}
